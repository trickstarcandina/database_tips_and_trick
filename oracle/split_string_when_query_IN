SELECT TRIM(REGEXP_SUBSTR('101,102,401,403', '[^,]+', 1, LEVEL)) AS DATA  
FROM DUAL CONNECT BY REGEXP_SUBSTR('101,102,401,403', '[^,]+', 1, LEVEL) IS NOT NULL

SELECT ...
FROM ...
WHERE ... IN (
    SELECT TRIM(REGEXP_SUBSTR('101,102,401,403', '[^,]+', 1, LEVEL)) AS DATA  
    FROM DUAL CONNECT BY REGEXP_SUBSTR('101,102,401,403', '[^,]+', 1, LEVEL) IS NOT NULL
)